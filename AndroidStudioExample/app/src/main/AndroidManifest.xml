<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fsn.cauly.example">

    <!-- Cauly : 광고 노출을 위한 필수 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".JavaEntryActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".JavaActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_java">    <!-- orientation 변경 시 Activity 재시작 방지 -->
        </activity>

        <activity
            android:name=".JavaXMLActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_xml">    <!-- orientation 변경 시 Activity 재시작 방지 -->
        </activity>
        <activity
            android:name=".JavaNativeListActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"></activity>
        <activity
            android:name=".JavaNativeViewActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"></activity>
        <activity
            android:name=".JavaNativeCardActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"></activity>
        <activity
            android:name=".JavaNativeDataActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"></activity>
        <activity
            android:name=".JavaCloseActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"></activity>

        <activity
            android:name=".KotlinXMLActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_xml" /> <!-- orientation 변경 시 Activity 재시작 방지 -->
        <activity
            android:name=".KotlinNativeViewActivity"
            android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity
            android:name=".KotlinNativeDataActivity"
            android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity
            android:name=".KotlinCloseAdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity
            android:name=".KotlinEntryActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:exported="true">
        </activity>
        <activity
            android:name=".KotlinActivity"
            android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity
            android:name="com.fsn.cauly.blackdragoncore.LandingActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"></activity>

    </application>

</manifest>
